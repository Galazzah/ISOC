<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/light_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:src="@drawable/ico_ramadan1436" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Number of Sponsors: "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/sponsors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Help your Masjid reach its goal of 1,000 sponsors pledging $100 or more"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/project"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:paddingBottom="2dp"
        android:paddingLeft="-30dp"
        android:paddingRight="-30dp"
        android:paddingTop="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_sponsorproject" />

</LinearLayout>